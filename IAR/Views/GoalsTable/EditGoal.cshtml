@model IAR.Models.GoalModel

<h4>Edit Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEditChanges">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
		    <div class="form-group">
			    <label asp-for="Activity" class="control-label"></label>
			    <div class="form-control">
				    @Html.DisplayFor(model => model.Activity)
			    </div>
		    </div>

		    <div class="form-group">
			    <label asp-for="Goal" class="control-label"></label>
			    <input asp-for="Goal" class="form-control" />	
		    </div>
            
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Goals page</a>
</div>

