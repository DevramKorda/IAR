@model IAR.Models.ActivityModel
<!--Шаблон - Edit-->
<h4>New Activity</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="AddNewDataToActivities">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Activity" class="control-label"></label>
				<select asp-for="Activity" class="form-control"
						asp-items="@(new SelectList(@ViewBag.ListOfActivities,"Activity", "Activity"))" required>
					<option value="">Select Activity</option>
				</select>
				<span asp-validation-for="Activity" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Activity_duration" class="control-label"></label>
				<input asp-for="Activity_duration" class="form-control"  />
				<span asp-validation-for="Activity_duration" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Date_value" class="control-label"></label>
				<input id="myDate" asp-for="Date_value" class="form-control"/>
				<span asp-validation-for="Date_value" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Add" class="btn btn-primary" />
			</div>

		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to Activities page</a>
</div>